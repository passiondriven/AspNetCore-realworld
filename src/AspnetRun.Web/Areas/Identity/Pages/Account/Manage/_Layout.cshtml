@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Manage your account</h1>

    <div>
        <h4>Change your account settings</h4>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@if (IsSectionDefined("CartNotRequired"))
{
    RenderSection("CartNotRequired");
}

@section Scripts {
    @RenderSection("Scripts", required: false)
}
